<Window x:Class="ProjetAnnuaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetAnnuaire"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid Background="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- Premier tiers (1/3 de la hauteur totale) -->
                <RowDefinition Height="3*"/>
                <!-- Deuxième tiers (2/3 de la hauteur totale) -->
                <RowDefinition Height="*"/>
                <!-- Troisième tiers (1/3 de la hauteur totale) -->
            </Grid.RowDefinitions>

            <!-- Premier tiers -->
            <Grid Grid.Row="0">
                <Grid Grid.Row="0" Background="LightSlateGray" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtSearchByName" Text="Rechercher par nom de salarié" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5"/>
                    <TextBox x:Name="txtSearchBySite" Text="Rechercher par site" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5"/>
                    <TextBox x:Name="txtSearchByService" Text="Rechercher par service" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5"/>
                    <Button Content="Rechercher" Grid.Column="3" Click="Search_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="15, 5"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#005F9F"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#004C7F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>


            <!-- Deuxième tiers -->
            <Grid Grid.Row="1">
                <Grid Grid.Row="1">
                    <DataGrid ItemsSource="{Binding Employees}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Prénom" Binding="{Binding FirstName}" />
                            <DataGridTextColumn Header="Nom" Binding="{Binding LastName}" />
                            <DataGridTextColumn Header="Département" Binding="{Binding Department}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                            <DataGridTextColumn Header="Numéro de téléphone" Binding="{Binding PhoneNumber}" />
                            <DataGridTextColumn Header="Mobile" Binding="{Binding MobilePhone}" />
                            <DataGridTextColumn Header="Titre de poste" Binding="{Binding JobTitle}" />
                            <DataGridTextColumn Header="Description de poste" Binding="{Binding JobDescription}" />
                            <DataGridTextColumn Header="Service" Binding="{Binding Service}" />
                            <DataGridTextColumn Header="Site" Binding="{Binding Site}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>

            <!-- Troisième tiers -->
            <Grid Grid.Row="2">
                <!-- Votre contenu ici -->
            </Grid>
        </Grid>
    </Grid>
</Window>
