<Window
    x:Class="ProjetAnnuaire.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjetAnnuaire"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    mc:Ignorable="d">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MaxWidth="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            Width="150"
            Background="DarkSlateGray">
            <!--  Mode Visiteur  -->
            <Expander IsExpanded="True">
                <Expander.Header>
                    <TextBlock Margin="10" FontWeight="Bold">
                        <Run Foreground="White" Text="Mode Visiteur " />
                        <TextBlock
                            FontFamily="{StaticResource FontAwesome}"
                            Foreground="White"
                            Text="&#xf007;" />
                    </TextBlock>

                </Expander.Header>
                <Button
                    Margin="14"
                    Click="RechercherButton_Click"
                    Content="Rechercher"
                    FontWeight="Bold"
                    Foreground="Black" />
            </Expander>

            <!--  Mode Admin  -->
            <Expander x:Name="adminExpander" Visibility="{Binding AdminExpanderVisibility}">
                <Expander.Header>
                    <TextBlock Margin="10" FontWeight="Bold">
                        <Run Foreground="White" Text="Mode Admin " />
                        <TextBlock
                            FontFamily="{StaticResource FontAwesome}"
                            Foreground="White"
                            Text="&#xf2bd;" />
                    </TextBlock>


                </Expander.Header>
                <StackPanel>
                    <Button
                        Margin="14"
                        Click="RechercherButton_Click"
                        Content="Rechercher"
                        FontWeight="Bold"
                        Foreground="Black" />
                    <Button
                        Margin="14"
                        Click="AjouterButton_Click"
                        Content="Ajouter"
                        FontWeight="Bold"
                        Foreground="Black" />
                    <Button
                        Margin="14"
                        Click="ModifierButton_Click"
                        Content="Modifier"
                        FontWeight="Bold"
                        Foreground="Black" />
                    <Button
                        Margin="14"
                        Click="SupprimerButton_Click"
                        Content="Supprimer"
                        FontWeight="Bold"
                        Foreground="Black" />
                </StackPanel>
            </Expander>

            <Button
                Margin="14"
                Click="Deconnexion_Click"
                FontWeight="Bold"
                Visibility="{Binding AdminExpanderVisibility}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource FontAwesome}"
                        Foreground="White"
                        Text="&#xf08b;" />
                    <TextBlock
                        VerticalAlignment="Center"
                        Foreground="White"
                        Text="Déconnexion" />
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="DarkSlateGray" />
                        <Setter Property="Foreground" Value="White" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>



        </StackPanel>
        <Frame x:Name="contentFrame" Grid.Column="1">
            <Frame.Template>
                <ControlTemplate TargetType="Frame">
                    <Grid>
                        <ContentPresenter />
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                            <Button Command="{x:Static NavigationCommands.BrowseBack}" Content="&#9664;" />
                            <Button Command="{x:Static NavigationCommands.BrowseForward}" Content="&#9654;" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Frame.Template>
        </Frame>


    </Grid>
</Window>
