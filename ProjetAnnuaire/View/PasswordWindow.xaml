<Window x:Class="ProjetAnnuaire.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mot de passe Admin" Height="150" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Entrez le mot de passe Admin" FontSize="16" Margin="0 0 0 10"/>
            <PasswordBox x:Name="passwordBox" Width="200" PasswordChar="*" Margin="0 0 0 10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="OK" Width="80" Margin="10" Click="OK_Click"/>
                <Button Content="Annuler" Width="80" Margin="10" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
